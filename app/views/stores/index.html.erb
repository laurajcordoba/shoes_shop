<div class="page-header">
  <h1><%=t '.title', default: "Store" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= "Id" %></th>
      <th><%= "Name" %></th>
      <th><%= "Address" %></th>
      <th><%= "Created_at" %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.id, store_path(store) %></td>
        <td><%= store.name %></td>
        <td><%= store.address %></td>
        <td><%=l store.created_at %></td>
        <td>
          <%= link_to t('.show', default: t("helpers.links.show")),
                      store_path(store), class: 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', default: t("helpers.links.edit")),
                      edit_store_path(store), class: 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                      store_path(store),
                      method: :delete,
                      data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                      class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")), new_store_path, class: 'btn btn-primary' %>
