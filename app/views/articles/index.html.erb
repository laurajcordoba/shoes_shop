<div class="page-header">
  <h1><%= t '.title', default: 'Article' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= "Id" %></th>
      <th><%= "Name" %></th>
      <th><%= "Description" %></th>
      <th><%= "Price" %></th>
      <th><%= "Total_in_shelf" %></th>
      <th><%= "Total_in_vault" %></th>
      <th><%= "Store_id" %></th>
      <th><%= t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.id, article_path(article) %></td>
        <td><%= article.name %></td>
        <td><%= article.description %></td>
        <td><%= article.price %></td>
        <td><%= article.total_in_shelf %></td>
        <td><%= article.total_in_vault %></td>
        <td><%= article.store.name %></td>
        <td>
          <%= link_to t('.show', default: t("helpers.links.show")),
              article_path(article),
              class: 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', default: t("helpers.links.edit")),
                      edit_article_path(article),
                      class: 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                      article_path(article),
                      method: :delete,
                      data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                      class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")), new_article_path, class: 'btn btn-primary' %>
